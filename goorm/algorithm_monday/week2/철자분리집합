import java.io.*;
import java.util.*;


class Main {
	public static void main(String[] args) throws Exception {
		Scanner sc = new Scanner(System.in);
		int count = 0;
		char ch = ' ';
		
		int n = sc.nextInt();
		String str = sc.next();
		sc.close();
		
		for(int i=0; i<n; i++){
			char ch2 = str.charAt(i);
			
			if(ch!=ch2) count++;
			ch = ch2;
		}
		
		System.out.println(count);
		
	}
}
